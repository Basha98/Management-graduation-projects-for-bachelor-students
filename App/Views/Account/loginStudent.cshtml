@model App.Models.loginData
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>login</title>

    <link href="~/NewFolder1/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/NewFolder1/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    @using (Html.BeginForm("loginStudent", "Account", FormMethod.Post, new { @Id = "frmlogin" }))
    {
        @Html.AntiForgeryToken()
        <div class="container-fluid">
            <div class="row">

                <div class="col-xs-3"> </div>

                <div class="col-xs-6">

                    <div class=" form-group">
                        <img src="~/Resources/Apps-preferences-desktop-user-password-icon.png" />

                    </div>
                </div>


                <div class="col-xs-3"></div>

            </div>


            <div class=" row">
                <div class="col-xs-3"> </div>

                <div class="col-xs-6">
                    <label class="text-danger">@ViewBag.loginStudentError</label>
                    <div class=" login">
                        <div class="form-group">
                            <label> Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label> Password</label>
                            @Html.PasswordFor(m => m.Password,new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.CheckBoxFor(m => m.RemmmberMe)
                            <span>RemmberMe</span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-primary btn" />
                        </div>

                    </div>

                </div>


                <div class="col-xs-3"></div>
            </div>

            <div class="row">

                <div class="col-xs-2"></div>
                <div class="col-xs-4">
                    <div>
                        @Html.ActionLink("To Back", "start", "Account", new { @class = "btn btn-danger" })
                    </div>
                </div>

                <div class="col-xs-6"></div>

            </div>
        </div>
    }

</body>
</html>

